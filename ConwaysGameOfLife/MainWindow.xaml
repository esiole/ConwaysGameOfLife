<Window x:Class="ConwaysGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConwaysGameOfLife"
        mc:Ignorable="d"
        Title="Conway's Game of Life" Height="400" Width="400">
    <StackPanel>
        <ToolBar x:Name="ToolBar" Visibility="Collapsed">
            <Button x:Name="StartGameButton">Старт</Button>
        </ToolBar>
        <StackPanel x:Name="StartInfoPanel">
            <TextBlock>Conway's Game of Life</TextBlock>
            <GroupBox>
                <GroupBox.Header>
                    <TextBlock>Размер поля</TextBlock>
                </GroupBox.Header>
                <StackPanel>
                    <RadioButton GroupName="SizeMap" IsChecked="True">10x10</RadioButton>
                    <RadioButton GroupName="SizeMap">20x30</RadioButton>
                    <RadioButton GroupName="SizeMap">30x20</RadioButton>
                    <Button x:Name="CreateMapButton">Создать</Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <Grid x:Name="Map" ShowGridLines="True">
        </Grid>
    </StackPanel>
</Window>